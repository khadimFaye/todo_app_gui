<Dialog_content>:
    id: dialog_content
    padding : 10
    orientation : 'vertical'
    size_hint_y:(None)
    height : dp(300)
    
    MDScrollView:
        pos_hint: {'center_x':.5,'center_y':.85}
        id : scrollview
        size_hint:(1,None)
        height : 200
        MDGridLayout:
            id : inputs_gridlayout
            siz_hint:(1,None)
            height:150
            padding:8
            spacing : 8
            rows :2

            MDTextField :
                id : task_title
                mode : 'fill'
                fill_color_normal : (15/255,15/255,15/255)
                fill_color_focus : (15/255,15/255,15/255)
                hint_text : 'titolo '.title()
                text_color_focus: '#F8F5F7'
                text_color_normal : '#F8F5F7'
            MDTextField :
                id : task
                mode : 'fill'
                fill_color_normal : (15/255,15/255,15/255)
                fill_color_focus : (15/255,15/255,15/255)
                hint_text : 'descrizione  '.title()
                text_color_focus: '#F8F5F7'
                text_color_normal : '#F8F5F7'
                multiline : True

    MDGridLayout:
        rows: 1
        MDLabel:
            id : date_text_label
            text : ''
            #halign : 'center'
            #pos_hint : {'right':.4,'top':0.4}
        MDIconButton:
            icon : 'calendar'
            on_press : root.init_dat_time()
            #pos_hint : {'right':.8,'top':0.4}
    MDGridLayout:
        rows: 1
        spacing : 8
        id : buttons_layout
        MDRaisedButton:
            id : salva
            text: 'salva'
            on_press : app.add_task(task_title,task,date_text_label)

        MDRaisedButton:
            id : cancel
            text: 'cancella'

            disabled : 0
            on_press : app.close_dialog()

        MDRaisedButton:
            id : save_mod_button
            text: 'salva modifiche'
            disabled : True
            #on_press : app.save_modified_task(self)
        
        MDRaisedButton:
            id : annulla
            text: 'annulla'
            disabled : True
            on_press : app.save_modified_task(self)


         
<ListItemWith_Checkbox>:
    id : itemlist

    text : ''
    secondary_text : ''
    teritiary_text : ''

  
    secondary_text_font_size : dp(11)
    secondary_text_font_style : 'Subtitle1'
    teritiary_text_font_style : 'Caption'
    teritiary_text_font_size : dp(4)  
    on_press : app.Open_dialog_to_modify_task(itemlist)
    divider :None
    
    CheckboxLeftWidget:
        id :check
        on_release : root.mark(check,itemlist)

    IconRightWidget:
        id:trash
        icon : 'trash-can-outline'
        on_press : root.delet_item(trash,itemlist)

        
   

    
    

            
                  
            
