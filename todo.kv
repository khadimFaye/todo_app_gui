<Dialog_content>:
    id: dialog_content
    padding : 10
    orientation : 'vertical'
    size_hint_y:(None)
    height : dp(300)
    
    MDScrollView:
        pos_hint: {'center_x':.5,'center_y':.85}
        id : scrollview
        size_hint:(1,None)
        height : 200
        MDGridLayout:
            id : inputs_gridlayout
            siz_hint:(1,None)
            height:150
            padding:8
            spacing : 8
            rows :2

            MDTextField :
                id : task_title
                mode : 'fill'
                fill_color_normal : (15/255,15/255,15/255)
                fill_color_focus : (15/255,15/255,15/255)
                hint_text : 'titolo '.title()
                text_color_focus: '#F8F5F7'
                text_color_normal : '#F8F5F7'
            MDTextField :
                id : task
                mode : 'fill'
                fill_color_normal : (15/255,15/255,15/255)
                fill_color_focus : (15/255,15/255,15/255)
                hint_text : 'descrizione  '.title()
                text_color_focus: '#F8F5F7'
                text_color_normal : '#F8F5F7'
                multiline : True

    MDGridLayout:
        rows: 1
        MDLabel:
            id : date_text_label
            text : ''
            #halign : 'center'
            #pos_hint : {'right':.4,'top':0.4}
        MDIconButton:
            icon : 'calendar'
            on_press : root.init_dat_time()
            #pos_hint : {'right':.8,'top':0.4}
    MDGridLayout:
        rows: 1
        spacing : 8
        id : buttons_layout
        MDRaisedButton:
            id : salva
            text: 'salva'
            disabled : 0
            on_press : app.add_task(self,task_title,task,date_text_label)

        MDRaisedButton:
            id : cancel
            text: 'cancella'

            disabled : 0
            on_press : app.close_dialog()

        


         
<ListItemWith_Checkbox>:
    id : itemlist

    text : ''
    secondary_text : ''
    teritiary_text : ''

  
    secondary_text_font_size : dp(11)
    secondary_text_font_style : 'Subtitle1'
    teritiary_text_font_style : 'Caption'
    teritiary_text_font_size : dp(4)  
    #on_press : app.Open_dialog_to_modify_task(itemlist)
    on_press : app.Open_content_task_screen(itemlist)
    divider :None
    
    CheckboxLeftWidget:
        id :check
        on_release : root.mark(check,itemlist)

    IconRightWidget:
        id:trash
        icon : 'trash-can-outline'
        on_press : root.delet_item(trash,itemlist)



<task_content_screen> :
    id : task_content
    name : 'task content'
    MDRelativeLayout:
   
                      
        MDTopAppBar:
            id : top_bar
            title : 'task title'.title()
            anchor_title : 'center'
            elevation : 1
            md_bg_color : '#1a1a1a'
            left_action_items : [['chevron-left',lambda x:root.swith_to_home(self) ]]
            right_action_items : [['swap-vertical',lambda x : print('hello')]]
            pos_hint: {'center_x':.5,'center_y':.95}

        
        MDScrollView:
            id : scroll
            size_hint :(1,.8)
           
            pos_hint: {'center_x':.5,'center_y':.45}
           
            do_scroll_y : True
            always_overscroll :0
            scroll_distance : 200
            MDBoxLayout:
                id : widget_box
                orientation : "vertical"
                size_hint_y : None
               
            
                padding : dp(10)
                spacing : dp(15)
                pos_hint: {'center_x':.5,'center_y':.99}
                
                
                MDCard:
                    id : board
                    size_hint : (1,None)
                    height : 80
                    radius: [15]
                    md_bg_color : top_bar.md_bg_color
                    
                    MDRelativeLayout:
                        size_hint_y: None
                        height : board.height
                        pos_hint: {'center_x':.5,'center_y':.5}
                        MDGridLayout:
                            rows : 1
                            spacing : dp(10)
                            pos_hint: {'center_x':.5,'center_y':.5}
                            
                            MDLabel :
                                id : tempo
                                text : '00:00'
                                halign : 'center'
                                font_name : root.regular
                                theme_text_color  : 'Custom'
                                text_color : '#5112a3'
                                font_size : dp(25)

                            MDLabel :
                                id : obiettivi
                                text : root.num_obj
                                halign : 'center'
                                font_name : root.regular
                                theme_text_color : 'Custom'
                                text_color : '#5112a3'
                                font_size : dp(25)
                            MDLabel :
                                id : tempo_trascorso
                                text : '00:00'
                                halign : 'center'
                                font_name : root.regular
                                theme_text_color : 'Custom'
                                text_color : '#5112a3'
                                font_size : dp(25)
                            
                            MDLabel :
                                id : obiettivo_da_comp
                                text : '0'
                                halign : 'center'
                                font_name : root.regular
                                theme_text_color : 'Custom'
                                text_color : '#5112a3'
                                font_size : dp(25)

                MDTextField:
                    id : titolo
                    size_hint : (1,None)
                    height : 40
                    text_color_focus : '#F8F5F7'
                    text_color_normal : '#F8F5F7'
                    hint_text : 'aggiungi un obiettivo...'
                    hint_text_color_normal : (209/255, 209/255, 209/255) if titolo.text =='' else (43/255,43/255,43/255,43/255)
                    hint_text_color_focus : (43/255,43/255,43/255,43/255)

                    mode : 'fill'
                    fill_color_focus : (43/255,43/255,43/255,43/255)
                    fill_color_normal : (43/255,43/255,43/255,43/255)
                    
                    icon_left : 'plus'
                    icon_left_color_normal : (209/255, 209/255, 209/255)
                    icon_left_color_focus : (209/255, 209/255, 209/255)
                    line_color_focus : (43/255,43/255,43/255,43/255)
                    on_text_validate :  root.add_subtask(titolo)
                
                

                MDList:
                    pos_hint : {'y':.4}
                    MDGridLayout:
                        id : grid_item
                        cols : 1
                        size_hint_y:None
                        height : 300
                        id : grid_subtasks
                        spacing : dp(10)


<Swipecard>:
    id : swipecard
    type_swipe : 'hand'
    swipe_distance : dp(40)
    max_swipe_x : .2
    max_opened_x :70
    MDCardSwipeLayerBox:
        mg_bg_color : '#db164e'
        radius : [10]
        MDIconButton :
            icon : 'trash-can'
            on_press : root.delet_sub_task(swipecard)
    MDCardSwipeFrontBox:
        id: frontbox
        md_bg_color: '#1a1a1a'
        radius: [10]
        on_press : root.check_state(swipecard,)

<OneLine_AvatarIcon_ListItem>:
    IconRightWidget:
        icon : 'play-circle'
        theme_icon_color : 'Custom'
        icon_color : '#5112a3'
    IconLeftWidget:
        icon : 'circle-outline'
        id : circle_icon
        on_press : root.check_icon(self)
       
                        
                       
                       
        
          
           
            

           

           

   

    
    

            
                  
            
